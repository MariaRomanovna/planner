<Window x:Class="planner.Window.Authorize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:planner.Window"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800"
        Icon="C:\Users\pavilion\source\repos\planner\planner\images\avocado (1).png">
    <Grid Background="#06606B" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"> 
        <TextBlock
            Foreground="White"
            FontSize="24">Авторизация</TextBlock>
        <TextBlock
            Foreground="White"
            FontSize="18"
            Margin="5">Логин</TextBlock>
            <TextBox x:Name="TextLogin"
             Height="28"
                Width="400"
                Background="#148A99"
                FontSize="14"
                Foreground="White"></TextBox>
            <TextBlock 
            Foreground="White"
            FontSize="18"
            Margin="5">Пароль</TextBlock>
            <TextBox x:Name="TextPass" 
                Height="28"
                Width="400"
                Background="#148A99"
                FontSize="14"
                Margin="0 0 0 20"
                Foreground="White"></TextBox>
            <Button
                
                Height="40"
                Width="150"
                Style="{StaticResource ButtonEnter}"
                FontWeight="Medium"
                Click="Enter_Click">Войти</Button>
        </StackPanel>
        <Button
            Width="190"
            Height="30"
            Background="Transparent"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Margin="5"
            Foreground="White"
            FontSize="16"
            Click="Reg_Click">Зарегистрироваться</Button>
    </Grid>
</Window>
